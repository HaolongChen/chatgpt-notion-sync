# Notion Configuration
NOTION_API_KEY=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ChatGPT/OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
CHATGPT_SESSION_TOKEN=your_chatgpt_session_token_here

# Application Configuration
NODE_ENV=development
PORT=3000

# Logging Configuration (Optional - Overrides config/default.json)
# LOG_LEVEL=info
# LOG_FORMAT=json

# Sync Configuration (Optional - Overrides config/default.json)
# SYNC_BATCH_SIZE=10
# SYNC_INTERVAL_MS=300000
# ENABLE_SCHEDULED_SYNC=false
# DRY_RUN=false

# Rate Limiting (Optional - Overrides config/default.json)
# NOTION_RATE_LIMIT=3
# CHATGPT_RATE_LIMIT=5

# Retry Configuration (Optional - Overrides config/default.json)
# MAX_RETRY_ATTEMPTS=3
# RETRY_INITIAL_DELAY_MS=1000
# RETRY_MAX_DELAY_MS=30000

# Monitoring (Optional)
# ENABLE_METRICS=true
# METRICS_PORT=9090
# HEALTH_CHECK_PORT=8080

# Error Handling (Optional)
# EXIT_ON_FATAL_ERROR=false
# NOTIFY_ON_ERROR=false

# Database/Cache Configuration (Optional)
# CACHE_ENABLED=true
# CACHE_TTL_SECONDS=3600

# Webhook Configuration (Optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com
# WEBHOOK_SECRET=your_webhook_secret

# Notification Configuration (Optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url
# EMAIL_NOTIFICATION_ADDRESS=your-email@example.com
